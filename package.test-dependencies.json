{
  "devDependencies": {
    "vitest": "^1.0.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "jsdom": "^23.0.1",
    "happy-dom": "^12.10.3"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:edge-cases": "vitest run --grep=\"edge.case|Edge Case\"",
    "test:integration": "vitest run --grep=\"integration|Integration\"",
    "test:critical": "vitest run --grep=\"critical|Critical\""
  }
}